import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.Random;

public class ChooseGame extends JFrame {
	public JTextField inputNumber, results;
	private JLabel enterNo, choosenNum;
	private JButton backBtn, spinBtn, setBtn;
	private int choosenNumber, winningNumber;
	Random spinner = new Random();
	
	
	
	public ChooseGame(){
		super("ChooseGame");
		setLayout(new FlowLayout());
		
		
		
		enterNo = new JLabel("Enter your number (1-25)");
		add(enterNo);
		
		inputNumber = new JTextField(3);
		add(inputNumber);
		
		choosenNum= new JLabel("Your Chosen Number is ");
		add(choosenNum);
		
		setBtn = new JButton("Set Choice");
		add(setBtn);
		
		
		spinBtn = new JButton("Spin");
		add(spinBtn);
		
		backBtn = new JButton("Back");
		add(backBtn);
		
		results = new JTextField("Your Results Will Be Displayed Here");
		results.setEditable(false);
		results.setOpaque(false);
		results.setEditable(false);
	    results.setBackground(new Color(0,0,0,0));
	    results.setFont(results.getFont().deriveFont(14f));
		add(results);
		
		
		backHandler pressBack = new backHandler();
		backBtn.addActionListener(pressBack);
		
		spinHandler spinIt = new spinHandler();
		spinBtn.addActionListener(spinIt);
		
		setNumHandler setNo = new setNumHandler();
		setBtn.addActionListener(setNo);
		
		
	}
	
	private class backHandler implements ActionListener{
		public void actionPerformed(ActionEvent backPress){
			Betting bettingFrame = new Betting();
			bettingFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
			bettingFrame.setSize(400,500);
			bettingFrame.setLocation(500,100);
			bettingFrame.setResizable(false);
			bettingFrame.setVisible(true);
			
			setVisible(false);
			
		}
			
		
	}
	private class setNumHandler implements ActionListener{
		public void actionPerformed(ActionEvent setPress){
			choosenNumber = Integer.parseInt(inputNumber.getText());
			inputNumber.setText("");
			choosenNum.setText("Your chosen Number is "+choosenNumber);
			
		}		
	}
	
	
	private class spinHandler implements ActionListener{
		public void actionPerformed(ActionEvent spinPress){
			winningNumber = 1+(spinner.nextInt(25));
			
			
			
			if(choosenNumber == winningNumber){
				results.setText("Your number was "+choosenNumber+"\nThe winning Number was "+winningNumber+"\nCongratulation, You Won!");
			}
			else{
				results.setText("Your number was "+choosenNumber+"\nThe winning Number was "+winningNumber+"\nBetter Luck Next Time");
			}
			
			
		}		
	}

}
